<Window x:Class="BudgetPlanner.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner.WPF"
        xmlns:models="clr-namespace:BudgetPlanner.DAL.Models;assembly=BudgetPlanner.DAL"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"

        
        mc:Ignorable="d"
        Title="Budgetplanerare"
        Language="sv-SE"
        SizeToContent="Width"
        Height="600" 
        MinWidth="750">

    <Window.Resources>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FFEEE8AA"/>
        </Style>

        <!-- Enum till ComboBox -->
        <ObjectDataProvider x:Key="RecurrenceValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Recurrence"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>


        <!-- ListView med transaktioner -->
        <ListView ItemsSource="{Binding TransactionsView}"
                  SelectedItem="{Binding SelectedTransaction}"
                  Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Datum" Width="100" DisplayMemberBinding="{Binding Date, StringFormat=d}" />
                    <GridViewColumn Header="Anteckning" Width="200" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="Kategori" Width="120" DisplayMemberBinding="{Binding Category.Name}" />
                    <GridViewColumn Header="Typ" Width="80" DisplayMemberBinding="{Binding Type}" />
                    <GridViewColumn Header="Återkommande" Width="100" DisplayMemberBinding="{Binding Recurrence}" />
                    <GridViewColumn Header="Belopp" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding Amount, StringFormat=C}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Expense">
                                                    <Setter Property="Text" Value="{Binding Amount, StringFormat=-{0:C}}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                </GridView>
            </ListView.View>
        </ListView>

        <!-- Formulär -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
            <TextBlock Text="Ny transaktion" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Datum:" Width="80"/>
                <DatePicker SelectedDate="{Binding NewTransactionDate}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Anteckning:" Width="80"/>
                <TextBox Text="{Binding NewTransactionDescription}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Belopp:" Width="80"/>
                <TextBox Text="{Binding NewTransactionAmount}" Width="150"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Kategori:" Width="80"/>
                <ComboBox ItemsSource="{Binding Categories}"
              SelectedItem="{Binding NewTransactionCategory}"
              Width="150"
                          ItemTemplate="{StaticResource CategoryComboBoxItemTemplate}"
                          ItemContainerStyle="{StaticResource CategoryComboBoxItemStyle}">
                </ComboBox>
            </StackPanel>




            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Återkommande:" Width="80"/>
                <ComboBox SelectedItem="{Binding NewTransactionRecurrence}" Width="150"
                           ItemsSource="{Binding Source={StaticResource RecurrenceValues}}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Lägg till" Command="{Binding AddCommand}" Width="80" Margin="0,0,10,0"/>
                <Button Content="Ta bort" Command="{Binding DeleteCommand}" Width="80"/>
            </StackPanel>

            <!-- Filtrering Summeringar-->
            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Left">
                <TextBlock Text="Filter" Width="80" Margin="0,10,0,0"/>
                <CheckBox Content="OneTime" IsChecked="{Binding ShowOneTime}" />
                <CheckBox Content="Monthly" IsChecked="{Binding ShowMonthly}" />
                <CheckBox Content="Yearly" IsChecked="{Binding ShowYearly}"/>

                <!-- Filter för typ -->
                <CheckBox Content="Inkomster" IsChecked="{Binding ShowIncome}" />
                <CheckBox Content="Utgifter" IsChecked="{Binding ShowExpense}" />
            </StackPanel>
        </StackPanel>
        
        
        <StackPanel Grid.Row="1" Grid.Column="1">
            <!-- Kategorifilter -->
            <TextBlock Text="Kategori:" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding Categories}"
          SelectedItem="{Binding SelectedFilterCategory}"
          Width="150"
          ItemTemplate="{StaticResource CategoryComboBoxItemTemplate}"
          ItemContainerStyle="{StaticResource CategoryComboBoxItemStyle}">

            </ComboBox>
            <Button Content="Rensa filter" Width="100" Margin="0,5,0,0"
        Command="{Binding ClearCategoryFilterCommand}"/>
        </StackPanel>

        <!-- Summeringar -->
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Totala inkomster: " FontWeight="Bold"/>
            <TextBlock Text="{Binding FilteredTotalIncome, StringFormat=C}" Margin="5,0,20,0"/>
            <TextBlock Text="Totala utgifter: " FontWeight="Bold"/>
            <TextBlock Text="{Binding FilteredTotalExpense, StringFormat=C}" Margin="5,0,20,0"/>
            <TextBlock Text="Resultat: " FontWeight="Bold"/>
            <TextBlock Text="{Binding FilteredTotalResult, StringFormat=C}" Margin="5,0,20,0"/>
            <TextBlock Text="Månadsprognos: " FontWeight="Bold"/>
            <TextBlock Text="{Binding FilteredMonthlyForecast, StringFormat=C}" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
