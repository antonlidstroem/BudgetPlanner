<Window x:Class="BudgetPlanner.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner.WPF"
       xmlns:views="clr-namespace:BudgetPlanner.WPF.Views"
        xmlns:summaries="clr-namespace:BudgetPlanner.WPF.Views.Summaries"
        mc:Ignorable="d"
        Title="Budgetplanerare"
        Language="sv-SE"
        MinHeight="600" 
        MinWidth="750">

    <Grid Margin="16">
        <TabControl>

            <TabItem Header="Transaktioner">
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <views:TransactionListView Grid.Column="0" Margin="0,0,12,0"/>
                    <views:TransactionForm Grid.Column="1"/>
                </Grid>
            </TabItem>

            <TabItem Header="Översikt">
                <summaries:Overview DataContext="{Binding Overview}" />
            </TabItem>

        </TabControl>
    </Grid>
</Window>
