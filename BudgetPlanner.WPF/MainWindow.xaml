<Window x:Class="BudgetPlanner.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner.WPF"
        xmlns:models="clr-namespace:BudgetPlanner.DAL.Models;assembly=BudgetPlanner.DAL"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:conv="clr-namespace:BudgetPlanner.WPF.Converters" 
        xmlns:forms="clr-namespace:BudgetPlanner.WPF.ViewModels.Forms"
        xmlns:filters="clr-namespace:BudgetPlanner.WPF.ViewModels.Filters"

        mc:Ignorable="d"
        Title="Budgetplanerare"
        Language="sv-SE"
        SizeToContent="Width"
        Height="600" 
        MinWidth="750">

    <Window.Resources>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FFEEE8AA"/>
        </Style>

        <!-- Enum till ComboBox -->
        <!--<ObjectDataProvider x:Key="RecurrenceValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Recurrence"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>-->




    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>


        <!-- ListView med transaktioner -->
        <ListView ItemsSource="{Binding TransactionsView}"
                  SelectedItem="{Binding Selected}"
                  Grid.Column="0" Grid.Row="0" Margin="0,0,10,0"
                  SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Datum" Width="100" DisplayMemberBinding="{Binding Date, StringFormat=d}" />
                    <GridViewColumn Header="Anteckning" Width="200" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="Kategori" Width="120" DisplayMemberBinding="{Binding Category.Name}" />
                    <GridViewColumn Header="Typ" Width="80" DisplayMemberBinding="{Binding Type}" />
                    <GridViewColumn Header="Återkommande" Width="100" DisplayMemberBinding="{Binding Recurrence}" />
                    <GridViewColumn Header="Månad" Width="100" DisplayMemberBinding="{Binding Month}" />
                    <GridViewColumn Header="Belopp" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding Amount, StringFormat=C}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Expense">
                                                    <Setter Property="Text" Value="{Binding Amount, StringFormat=-{0:C}}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                </GridView>
            </ListView.View>
        </ListView>

        <!-- Formulär -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
            <TextBlock FontWeight="Bold"
           FontSize="14"
           Margin="0,0,0,10">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Text" Value="Ny transaktion"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                <Setter Property="Text" Value="Redigera transaktion"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Datum:" Width="80"/>
                <DatePicker SelectedDate="{Binding Form.TransactionDate}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Anteckning:" Width="80"/>
                <TextBox Text="{Binding Form.TransactionDescription}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Belopp:" Width="80"/>
                <TextBox Text="{Binding Form.TransactionAmount}" Width="150"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Kategori:" Width="80"/>
                <ComboBox ItemsSource="{Binding Categories}"
              SelectedItem="{Binding Form.TransactionCategory}"
              Width="150"
                          ItemTemplate="{StaticResource CategoryComboBoxItemTemplate}"
                          ItemContainerStyle="{StaticResource CategoryComboBoxItemStyle}">
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Återkommande:" Width="80"/>
                <ComboBox SelectedItem="{Binding Form.TransactionRecurrence}" Width="150"
                           ItemsSource="{Binding Form.RecurrenceValues}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Månad:" Width="80"/>
                <ComboBox ItemsSource="{Binding Form.Months}"
          SelectedItem="{Binding Form.TransactionMonth}">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Form.TransactionRecurrence}" Value="Yearly">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5"
            Visibility="{Binding Form.IsIncomeCategorySelected, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Före skatt:" Width="80"/>
                <CheckBox IsChecked="{Binding Form.IsGrossIncome}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5"
            Visibility="{Binding Form.IsIncomeCategorySelected, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Skattesats (%)" Width="80"/>
                <TextBox Text="{Binding Form.TaxRate}" Width="150"/>
            </StackPanel>

            <!-- Knappar -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Lägg till"
                        Command="{Binding AddCommand}"
                        Width="80"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Uppdatera"
                        Command="{Binding UpdateCommand}"
                        Width="80"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Avbryt"
                        Command="{Binding CancelEditCommand}"
                        Width="80">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInEditMode}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="Ta bort"
                    Command="{Binding DeleteCommand}"
                    Width="80"
                    IsEnabled="{Binding Selected, Converter={StaticResource NullToBoolConverter}}"/>



            </StackPanel>


            <!-- Filtrering Summeringar-->
            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Left">
                <TextBlock Text="Filter" Width="80" Margin="0,10,0,0"/>
                <CheckBox Content="OneTime" IsChecked="{Binding Filter.ShowOneTime}" />
                <CheckBox Content="Monthly" IsChecked="{Binding Filter.ShowMonthly}" />
                <CheckBox Content="Yearly" IsChecked="{Binding Filter.ShowYearly}"/>

                <!-- Filter för typ -->
                <CheckBox Content="Inkomster" IsChecked="{Binding Filter.ShowIncome}" />
                <CheckBox Content="Utgifter" IsChecked="{Binding Filter.ShowExpense}" />
            </StackPanel>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1">
            <!-- Kategorifilter -->
            <TextBlock Text="Kategori:" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding Categories}"
          SelectedItem="{Binding Filter.SelectedCategory}"
          Width="150"
          ItemTemplate="{StaticResource CategoryComboBoxItemTemplate}"
          ItemContainerStyle="{StaticResource CategoryComboBoxItemStyle}">

            </ComboBox>
            <Button Content="Rensa filter" Width="100" Margin="0,5,0,0"
        Command="{Binding ClearFilterCommand}"/>
        </StackPanel>

        <!-- Summeringar -->
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,0">

            <StackPanel Orientation="Vertical" Margin="10,0,0,5">
                <TextBlock Text="Totala inkomster: " FontWeight="Bold"/>
                <TextBlock Text="{Binding FilteredTotalIncome, StringFormat=C}" Margin="5,0,20,0"/>
                <TextBlock Text="Totala utgifter: " FontWeight="Bold"/>
                <TextBlock Text="{Binding FilteredTotalExpense, StringFormat=C}" Margin="5,0,20,0"/>
                <TextBlock Text="Resultat: " FontWeight="Bold"/>
                <TextBlock Text="{Binding FilteredTotalResult, StringFormat=C}" Margin="5,0,20,0"/>
                <TextBlock Text="Månadsprognos: " FontWeight="Bold"/>
                <TextBlock Text="{Binding FilteredMonthlyForecast, StringFormat=C}" Margin="5,0,0,0"/>


            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="100,0,0,5">

                <StackPanel Orientation="Vertical" Margin="0,0,0,5"
                     Visibility="{Binding Form.IsIncomeCategorySelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Årsarbetstid (timmar):" Width="150"/>
                    <TextBox Text="{Binding Form.AnnualHours}" Width="80"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,0,5"
                      Visibility="{Binding Form.IsIncomeCategorySelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Timlön:" Width="150"/>
                    <TextBlock Text="{Binding Form.HourlyRate, StringFormat=C}" Width="80"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,0,5"
                      Visibility="{Binding Form.IsIncomeCategorySelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Månadslön från timmar:" Width="150"/>
                    <TextBlock Text="{Binding Form.MonthlyIncomeFromHours, StringFormat=C}" Width="80"/>
                </StackPanel>

            </StackPanel>

            <TextBlock Text="{Binding Summaries.TotalIncome, StringFormat=C}" />
           

        </StackPanel>


        


    </Grid>
</Window>
