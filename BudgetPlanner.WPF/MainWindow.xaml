<Window x:Class="BudgetPlanner.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner.WPF"
        xmlns:views="clr-namespace:BudgetPlanner.WPF.Views"
        mc:Ignorable="d"
        Title="Budgetplanerare"
        Language="sv-SE"
        Height="600" 
        MinWidth="750">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Vänstra kolumn: Transaktioner -->
        <views:TransactionListView Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,10,0"/>

        <!-- Högra kolumn: skapa egen Grid med två rader -->
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Formulär -->
                <RowDefinition Height="Auto"/>
                <!-- Summeringar -->
            </Grid.RowDefinitions>

            <!-- Formulär -->
            <views:TransactionForm Grid.Row="0" Margin="0,0,0,10"/>

            <!-- Summeringar -->
            <views:TransactionSummaries Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
