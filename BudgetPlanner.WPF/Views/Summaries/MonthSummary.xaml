<UserControl x:Class="BudgetPlanner.WPF.Views.Summaries.MonthSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.WPF.Views.Summaries"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Padding="10" Margin="10" CornerRadius="6" Background="#F9F9F9">
            <StackPanel>
                <TextBlock Text="Vald månad" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalIncome, StringFormat=C}" Foreground="Green"/>
                <TextBlock Text="{Binding TotalExpense, StringFormat=C}" Foreground="Red"/>
                <TextBlock Text="{Binding Result, StringFormat=C}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
